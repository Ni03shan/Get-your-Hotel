<%- layout("/layout/boilerplate") %>
<div class="row-new">
  <form method="POST" action="/listings/new" novalidate class="needs-validation offset-2 col-8" enctype="multipart/form-data">
    <div class="mb-3 " >
      <label for="title" class="form-label">Title : </label>
      <input placeholder="Enter Title" name="title" class="form-control" required />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Description : </label>
      <input placeholder="Enter Description" name="description" class="form-control" />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image </label>
      <input name="image" type="file" class="form-control" />
    </div>
    <div class="mb-3 col-4">
      <label for="price" class="form-label">Price : </label>
      <input placeholder="Enter Price" name="price" class="form-control" required />
    </div>
    <div class="mb-3 col-8" >
      <label for="location" class="form-label">Location : </label>
      <input
        placeholder="Enter Location"
        name="location"
        class="form-control" required
      />
    </div>
    <div class="mb-3">
      <label for="country" class="form-label">Country : </label>
      <input placeholder="Enter Country" name="country" class="form-control" required />
    </div>
    <button class="add-btn">Add</button>
  </form>
</div>
