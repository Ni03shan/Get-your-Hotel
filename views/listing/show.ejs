<%- layout("/layout/boilerplate") %>
<body>
    <div class="offset-3">
        <p style="font-size: 24px; font-weight:600">Listing Details</p>
        <div class="show-div">
    <img src="<%= shows.image.url %>" alt="" class="show-img" />
    <br><br>
    <h3><%=shows.title%></h2>
        <p class="show-details">Owned by : <%=shows.owner.username%></p>
        <p class="show-details"><%=shows.description%></p>
    <p class="show-details">Rs <%=shows.price%> Only</p>
    <p class="show-details"><%=shows.location%></p>
    <p class="show-details"><%=shows.country%></p>
</div>
<% if(curUser && curUser._id.equals(shows.owner._id)){%>
<div class="show-button">
    <form method="GET" action="/listings/<%= shows._id %>/edit">
      <button class="edit-btn">Edit</button>
    </form>
    <br />
    <form method="POST" action="/listings/<%= shows._id %>">
    <button class="delete-btn">Delete</button>
    </form>
</div>
<%} %>
<br>
<div class="mb-2 col-8 offet-3 ">
    <h4>Leave a review</h4>
    <form action="/listings/<%= shows._id %>/review" method="POST" novalidate class="needs-validation">

        <div class="mb-2">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" name="review[rating]" min="1" max="5" required>
        </div>
        <div class="mb-2">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="" rows="5" cols="45"  class="form-control" required></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <div class="mt-3">
        <p class="Feedback">Feedback</p>
        <div class="main-class">
            <% for(let i of shows.reviews){%>
            <div class="card" style="--rating:90">
                <div class="title">Anonymous</div>
                <p class="description"><%= i.comment %> </p>
                <div class="rating"><%= i.rating %></div>
            </div>
             <%}%>
     </div>
    </div>
    </div>
</div>
</body>
